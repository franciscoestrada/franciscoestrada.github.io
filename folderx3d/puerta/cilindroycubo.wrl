#VRML V2.0 utf8
DEF abrePuerta Transform{children[
Shape{
geometry Cylinder{radius 0.05 height 2} 
appearance Appearance{material Material{}}}

Transform{
translation 0.4 0 0
children[
Shape{
geometry Box{size 0.8 2 0.1}
appearance Appearance{
texture ImageTexture{url "texturas/madera.jpg"}
}}]}


]}





































#Empieza la animaci칩n:
# 1. Tiempo que durar치 la animaci칩n:

DEF timer TimeSensor { 
		cycleInterval 20.0 
		loop FALSE
		startTime -1
	}   
 
 DEF Toque TouchSensor {}
 
 
# 2. Los fotogramas clave:
	DEF giro OrientationInterpolator {
		key [ 0, .25, 1 ] 
		keyValue [ 0 1 0 0, 0 1 0 2, 0 1 0 0 ]
	}
]}

#timer pasa fracciones de tiempo a giro
ROUTE timer.fraction_changed TO giro.set_fraction 

# gira el Transform llamado SSolar
ROUTE giro.value_changed TO abrePuerta.set_rotation

# Iniciar animaci칩n al tocar la puerta

ROUTE Toque.touchTime TO timer.startTime

